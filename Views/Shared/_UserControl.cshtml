@using Microsoft.AspNetCore.Identity
@using DivarClone.Areas.Identity.Data

@inject SignInManager<DivarCloneUser> SignInManager
@inject UserManager<DivarCloneUser> UserManager

<div>
	<style>
        .user-control-menu {
            background-color: rgb(220, 53, 69);
            border: 2px solid white;
            color: white;
            margin-bottom: 5px;
        }

        .user-control-menu:hover {
            background-color: rgb(200, 50, 60);
            color:white;
        }
	</style>
	<div class="list-group">
        <a href="#" class="list-group-item list-group-item-action user-control-menu" onclick=userListings('@UserManager.GetUserName(User)')>آگهی های من</a>

        <a href="#" class="list-group-item list-group-item-action user-control-menu">گزینه اول</a>
        <a href="#" class="list-group-item list-group-item-action user-control-menu">گزینه دوم</a>
        <a href="#" class="list-group-item list-group-item-action user-control-menu">گزینه سوم</a>
	</div>
</div>

<script>
    function userListings(username) {
        window.location.href = `@Url.Action("ShowUserListings", "Home")?Username=${username}`;
    }
</script>